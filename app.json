{
  "expo": {
    "name": "CameraLandscape",
    "slug": "camera-landscape",
    "orientation": "landscape",
    "scheme": "cameraapp",
    "newArchEnabled": true,
    "plugins": [
      [
        "expo-camera",
        {
          "recordAudioAndroid": true,
          "cameraPermission": "Permita que o app use a câmera",
          "microphonePermission": "Permita que o app use o microfone para gravar vídeos"
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "LANDSCAPE"
        }
      ]
    ],
    "android": {
      "package": "com.seunome.cameralandscape",
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      }
    },
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "Precisamos da câmera para gravar vídeo.",
        "NSMicrophoneUsageDescription": "Precisamos do microfone para gravar o áudio do vídeo."
      }
    },
    "extra": {
      "eas": {
        "projectId": "4394364c-3ee0-4639-9b58-c76f35eb3a31"
      }
    }
  }
}
